<%= simple_form_for(@event) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :description, label: 'Enter the description', error: 'Description cannot be blank', autofocus: true, label_html: {class: "label"}, wrapper: false %>
    </div>
  </div>
  <%= f.button :submit, class: 'button is-primary' %>
<% end %>