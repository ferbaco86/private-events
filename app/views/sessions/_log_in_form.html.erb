

<%= simple_form_for @user, :url => url_for(:action => 'create', :controller => 'sessions'), :method => 'get' do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :name, label: 'Enter your username', error: 'User cannot be blank', autofocus: true, label_html: {class: "label"}, wrapper: false %>
    </div>
  </div>
  <%= f.button :submit, class: 'button is-primary' %>
<% end %>