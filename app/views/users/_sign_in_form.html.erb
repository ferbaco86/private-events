<%= simple_form_for(@user) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :name, label: 'Create your username', error: 'User cannot be blank', autofocus: true, label_html: {class: "label"}, wrapper: false %>
    </div>
  </div>
  <%= f.button :submit, class: 'button is-primary' %>
<% end %>
